<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.johnnyjinjing.popmovies.MovieFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/movie_title_height_min"
            android:paddingLeft="@dimen/movie_title_padding_horizontal"
            android:paddingRight="@dimen/movie_title_padding_horizontal"
            android:layout_marginBottom="@dimen/movie_title_margin_bottom"
            android:textColor="@color/movie_title_text"
            android:textSize="@dimen/movie_title_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/movie_info_margin_horizontal"
            android:layout_marginRight="@dimen/movie_info_margin_horizontal"
            android:minHeight="@dimen/movie_poster_height_min"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_poster_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/movie_poster_height_min"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/movie_poster_margin_right"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_date_text_size" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_rate_text_size" />

                <CheckBox android:id="@+id/checkbox_favorite"
                    style="?android:attr/starStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/movie_plot_margin_top"
            android:layout_marginBottom="@dimen/movie_plot_margin_bottom"
            android:layout_marginLeft="@dimen/movie_plot_margin_horizontal"
            android:layout_marginRight="@dimen/movie_plot_margin_horizontal"
            android:textSize="@dimen/movie_plot_text_size" />

        <View
            android:id="@+id/separater_trailer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/movie_separater_height"
            android:layout_marginLeft="@dimen/movie_separater_margin_horizontal"
            android:layout_marginRight="@dimen/movie_separater_margin_horizontal"
            android:layout_marginTop="@dimen/movie_separater_margin_vertical"
            android:layout_marginBottom="@dimen/movie_separater_margin_vertical"/>

        <TextView
            android:id="@+id/label_trailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/movie_trailer_margin_horizontal"
            android:layout_marginRight="@dimen/movie_trailer_margin_horizontal"
            android:layout_marginBottom="@dimen/movie_trailer_margin_label_content"
            android:textSize="@dimen/movie_trailer_label_text_size" />

        <LinearLayout
            android:id="@+id/linear_layout_trailer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/movie_trailer_margin_horizontal"
            android:layout_marginRight="@dimen/movie_trailer_margin_horizontal"
            android:orientation="vertical"/>

        <View
            android:id="@+id/separater_review"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/movie_separater_height"
            android:layout_marginLeft="@dimen/movie_separater_margin_horizontal"
            android:layout_marginRight="@dimen/movie_separater_margin_horizontal"
            android:layout_marginTop="@dimen/movie_separater_margin_vertical"
            android:layout_marginBottom="@dimen/movie_separater_margin_vertical"/>

        <TextView
            android:id="@+id/label_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/movie_review_margin_horizontal"
            android:layout_marginRight="@dimen/movie_review_margin_horizontal"
            android:layout_marginBottom="@dimen/movie_review_margin_label_content"
            android:textSize="@dimen/movie_review_label_text_size"/>

        <LinearLayout
            android:id="@+id/linear_layout_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/movie_review_margin_horizontal"
            android:layout_marginRight="@dimen/movie_review_margin_horizontal"
            android:orientation="vertical"/>

    </LinearLayout>
</ScrollView>



