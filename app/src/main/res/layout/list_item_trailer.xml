<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/movie_trailer_padding_between">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/movie_trailer_button_size"
        android:layout_height="@dimen/movie_trailer_button_size"
        android:src="@drawable/play_button"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/movie_trailer_margin_button_content"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textview_trailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_trailer_content_text_size"
        android:layout_gravity="center_vertical"/>

</LinearLayout>